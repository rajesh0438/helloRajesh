package testing;

public class FindingConsicutiveNumbers {

	public static void main(String[] args) {

		int[] num =  {1,1,0,1,1,1};
		
		findMaxConsecutiveOnes(num);
		
	}
	
	
	    public  static int findMaxConsecutiveOnes(int[] nums) {
	        
	       // int[] num =  {1,1,0,1,1,1};
	        
	        int total = 0;
	        
	        for(int i = 1 ; i <= nums.length ; i++ ){
	            
	            if( nums[i-1] == nums[i]) {
	            	
	            	total++;
	            }
	            
	        }
	        return total;
	        
	    }

	
	
}
